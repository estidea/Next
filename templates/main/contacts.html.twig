{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
      integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
      crossorigin=""/>
  <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.49.0/mapbox-gl.css' rel='stylesheet' />
{% endblock %}

{% block title %}Контакты{% endblock %}

{% block body %}
<div id="map"></div>
<div id="left-side" class="left-side-calendar">
    <div id="static">
        {% if is_mobile() %}
        <div id="logo">
            <img src="{{ asset('img/logo-mobile.svg') }}">
        </div>
        {% else %}
            <img id="logo" src="{{ asset('img/logo.png') }}">
        {% endif %}
        <ul id="menu">
            <li class="menu-item {{ app.request.get('_route') == 'home' ? 'active' }}"><a href="{{ path('home') }}">Бронирование</a></li>
            <li class="menu-item {{ app.request.get('_route') == 'calendar' ? 'active' }}"><a href="{{ path('calendar') }}">Календарь</a></li>
            <li class="menu-item {{ app.request.get('_route') == 'contacts' ? 'active' }}"><a href="{{ path('contacts') }}">Контакты</a></li>
        </ul>

    </div>
    <div id="left-contacts">
        <div class="contact-item">
            <small>Время работы: </small><br>11:00-24:00
        </div>
        <div class="contact-item">
            <small>Телефон: </small><br>+38(063)9446651 – Владислав
        </div>
        <div class="contact-item">
            <small>Email: </small><br>ingassowork@gmail.com
        </div>
    </div>
</div>
<div id="desktop-center">
    
</div>
<div id="mobile-center">
</div>

{% endblock %}

{% block javascripts %}
	{{parent()}}
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.49.0/mapbox-gl.js'></script>
    
    <script>
    mapboxgl.accessToken = 'pk.eyJ1IjoiZXN0aWRlYSIsImEiOiJjam5rcGZ0YXExOGloM3FwbTl4amdnMDRxIn0.nY2p2KTw0u-M5kFlfebUhQ';
    const map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/estidea/cjnkqszud0mju2son95xzayef',
    center: [30.657299, 46.304469],
    zoom: 17.0
    });
    var marker = new mapboxgl.Marker()
      .setLngLat([30.657299, 46.304469])
      .addTo(map);
    // create the popup
    var popup = new mapboxgl.Popup({ offset: 25 })
        .setText('Пространство NEXT');

    // create DOM element for the marker
    var el = document.createElement('div');
    el.id = 'marker';

    // create the marker
    new mapboxgl.Marker(el)
        .setLngLat([30.657299, 46.304469])
        .setPopup(popup) // sets a popup on this marker
        .addTo(map);

    </script>

{% endblock %}