{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/fullcalendar/css/fullcalendar/fullcalendar.min.css') }}" />
    {{parent()}}
{% endblock %}

{% block title %}Календарь{% endblock %}

{% block body %}
<div id="left-side" class="left-side-calendar">
    <div id="static">
        {% if is_mobile() %}
        <div id="logo">
            <img src="{{ asset('img/logo-mobile.svg') }}">
        </div>
        {% else %}
            <img id="logo" src="{{ asset('img/logo.png') }}">
        {% endif %}
        <ul id="menu">
            <li class="menu-item {{ app.request.get('_route') == 'home' ? 'active' }}"><a href="{{ path('home') }}">Бронирование</a></li>
            <li class="menu-item {{ app.request.get('_route') == 'calendar' ? 'active' }}"><a href="{{ path('calendar') }}">Календарь</a></li>
        </ul>

        <div id="calendar-manage">
            <div id="calendar-left"></div>
            <div id="calendar-center">
                <div id="calendar-date"></div>
            </div>
            <div id="calendar-right"></div>
        </div>

        <div id="modal-card">
            <div id="modal-left">
                <div id="modal-photo"></div>
            </div>
            <div id="modal-right">
                <div id="modal-info">
                    <div id="modal-close"><img src="{{ asset('img/close.svg') }}"></div>
                    <h3 id="modal-title">Клуб Мафии</h3>
                    <p id="modal-description">Единственный в Черноморске официальный клуб мафии. Игры проводятся профессиональным ведущим</p>
                </div>
                <div id="modal-action">
                    <div id="modal-price"><span>70 грн</span></div>
                    <div id="modal-btn">
                        <a href="#">Забронировать</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="desktop-center">
    <div id='calendar'></div>
</div>
<div id="mobile-center">
    <div id='mobile-calendar'></div>
</div>
    
{% endblock %}

{% block javascripts %}
	{{parent()}}
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/fullcalendar.min.js') }}"></script>
    
    <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/locale/ru.js') }}"></script>
    
    {% if is_mobile() %}
        <script src="{{ asset('js/mobile-calendar.js') }}"></script>
    {% else %}
        <script src="{{ asset('js/calendar.js') }}"></script>
    {% endif %}

    
{% endblock %}