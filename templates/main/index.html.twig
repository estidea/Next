{% extends 'base.html.twig' %}

{% block title %}Главная{% endblock %}

{% block body %}
	<div id="left-side">
		<div id="static">
			<img id="logo" src="{{ asset('img/logo.png') }}">
			<ul id="menu">
				<li class="menu-item {{ app.request.get('_route') == 'home' ? 'active' }}"><a href="{{ path('home') }}">Главная</a></li>
				<li class="menu-item {{ app.request.get('_route') == 'calendar' ? 'active' }}"><a href="{{ path('calendar') }}">Календарь событий</a></li>
				<li class="menu-item {{ app.request.get('_route') == 'booking' ? 'active' }}"><a href="{{ path('booking') }}">Бронирование</a></li>
			</ul>
		</div>
		<div id="modal-card">
			<div id="modal-left">
				<div id="modal-photo"></div>
			</div>
			<div id="modal-right">
				<div id="modal-info">
					<div id="modal-close"><img src="{{ asset('img/close.svg') }}"></div>
					<h3 id="modal-title">Клуб Мафии</h3>
					<p id="modal-description">Единственный в Черноморске официальный клуб мафии. Игры проводятся профессиональным ведущим</p>
				</div>
				<div id="modal-action">
					<div id="modal-price"><span>70 грн</span></div>
					<div id="modal-btn">
						<a href="#">Забронировать</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="center">
		<object id="main-svg" type="image/svg+xml" data="{{ asset('img/next-light8-areas-darker.svg') }}">Your browser does not support SVGs</object>
	</div>
	<div id="right-side">
		<ul id="offers">
			<li><a href="#" onmouseover="hoverList('mafia')" onmouseout="hideList('mafia')" onclick="showModal('mafia')">Клуб мафии</a></li>
			<li><a href="#" onmouseover="hoverList('consoles')" onmouseout="hideList('consoles')" onclick="showModal('consoles')">Консоли</a></li>
			<li><a href="#" onmouseover="hoverList('tennis')" onmouseout="hideList('tennis')" onclick="showModal('tennis')">Настольный теннис</a></li>
			<li><a href="#" onmouseover="hoverList('vip')" onmouseout="hideList('vip')" onclick="showModal('vip')">VIP-комната</a></li>
			<li><a href="#" onmouseover="hoverList('koworking')" onmouseout="hideList('koworking')" onclick="showModal('koworking')">Коворкинг</a></li>
			<li><a href="#" onmouseover="hoverList('board')" onmouseout="hideList('board')" onclick="showModal('board')">Настольные игры</a></li>
			<li><a href="#" onmouseover="hoverList('birthday')" onmouseout="hideList('birthday')" onclick="showModal('birthday')">Дни рождения</a></li>
			<li><a href="#" onmouseover="hoverList('barka')" onmouseout="hideList('barka')" onclick="showModal('barka')">Чай, кофе, еда</a></li>
		</ul>
	</div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/jquery.min.js') }}"></script>
	{{parent()}}
   
{% endblock %}