<!DOCTYPE html>
<html lang="en">
    <head>
    	<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
		<meta name="description" content="">
		<meta name="author" content="">
		<link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('bundles/uikit/css/uikit.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('bundles/uikit/css/components/datepicker.almost-flat.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('bundles/uikit/css/components/autocomplete.almost-flat.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('bundles/uikit/css/components/form-select.almost-flat.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/form-style.css') }}" rel="stylesheet" />  
        {% if is_mobile() %}
            <link href="{{ asset('css/mobile-style.css') }}" rel="stylesheet" />
        {% else %}
            <link href="{{ asset('css/desktop-style.css') }}" rel="stylesheet" />
        {% endif %}
        {% endblock %}
    </head>
    <body>
        <div id="logo-bg">
            <img src="{{ asset('img/bg-next.png') }}">
        </div>
        
    	<div class="main-container">
        	{% block body %}{% endblock %}
    	</div>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/fullcalendar/js/fullcalendar/lib/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/uikit/js/uikit.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/uikit/js/components/autocomplete.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/uikit/js/components/form-select.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/uikit/js/components/datepicker.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/uikit/js/components/timepicker.min.js') }}"></script>
            <script src="{{ asset('js/maskinput.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/form.js') }}"></script>
        {% endblock %}
    </body>
</html>
